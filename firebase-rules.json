{
  "rules": {
    ".read": false,
    ".write": false,
    "sessions": {
      "$sessionId": {
        ".read": true,
        ".write": true,
        "participants": {
          "$participantId": {
            ".read": true,
            ".write": true,
            ".validate": "newData.hasChildren(['name', 'isAdmin', 'hasVoted', 'joinedAt']) || data.exists()"
          }
        },
        "items": {
          "$itemId": {
            ".read": true,
            ".write": true,
            ".validate": "newData.hasChild('description') || data.exists()"
          }
        },
        "votes": {
          "$voteId": {
            ".read": true,
            ".write": true,
            ".validate": "newData.isString()"
          }
        },
        "currentItem": {
          ".read": true,
          ".write": true
        },
        "votesRevealed": {
          ".read": true,
          ".write": true,
          ".validate": "newData.isBoolean()"
        }
      }
    },
    "test": {
      ".read": true,
      ".write": true
    }
  }
}
